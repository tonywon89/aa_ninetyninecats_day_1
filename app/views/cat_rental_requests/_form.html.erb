<% method_request = @cat_rental.persisted? ? "patch" : "post" %>
<% submit = @cat_rental.persisted? ? "Update appointment" : "Create appointment" %>
<% action_url = @cat_rental.persisted? ? cat_rental_request_url(@cat_rental) : cat_rental_requests_url %>

<form action="<%= action_url %>" method="post">
  <input type="hidden" name="_method" value="<%= method_request %>"
  <label for="rental[cat_id]" >Choose a cat</label>
  <select name="rental[cat_id]">
    <option> </option>
    <% @cats.each do |cat| %>
      <option  value="<%= cat.id %>"
            <%= "selected" if @cat_rental.cat_id = cat.id %>>
        <%= cat.name %>
      </option>
    <% end %>
  </select>
  <br />

  <label for="rental[start_date]">Start Date</label>
  <input type="date" name="rental[start_date]" value="<%= @cat_rental.start_date %>"/>
  <br />

  <label for="rental[end_date]">End Date</label>
  <input type="date" name="rental[end_date]"value="<%= @cat_rental.end_date %>"/>
  <br />

  <input type="submit" value="<%= submit %>" />
</form>
